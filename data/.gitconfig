[user]
  name = Steve Occhipinti
  # email left intentially blank to encourage setting it per repository
  useConfigOnly = true

[init]
  templatedir = ~/.git_template
  defaultBranch = main

# The majority of this file was from Bobes and may need tweaking

[color]
  diff = auto
  branch = auto
  interactive = auto
  pager = true
  status = auto
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = green
[color "status"]
  added = green
  changed = red
  untracked = cyan

[core]
  excludesfile = ~/.gitignore-global
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  pager = diff-so-fancy | less --tabs=4 -RFX

[branch]
  autosetupmerge = true

[diff]
  renames = copy

# Custom format called 'nice'
[pretty]
  nice = %C(yellow)%h%C(red)%d %C(reset)%s %C(green)%an %C(bold black)%cr

[log]
  date = relative

[pager]
  status = true
  show-branch = true

[push]
  default = current

[rebase]
  stat = true

[rerere]
  # remembers manual conflict resolutions so you don't have to redo them later
  enabled = false
  autoupdate = true

# [commit]
#   template = /Users/steve.occhipinti/.git_commit_template

[help]
  autocorrect = -1

[hub]
  host = git.realestate.com.au
  protocol = ssh

# This block of aliases should be last in this file (see ~/.bash_git)
[alias]
  a = add
  aa = add -A .
  ap = add -p
  ai = add -i
  c = commit -v
  ca = commit -v -a
  cam = commit -v --amend
  co = checkout
  b = branch
  d = diff
  dc = diff --cached
  dw = diff --word-diff
  f = fetch
  p = pull
  pr = pull --rebase
  l = log --graph --format=nice
  la = log --graph --format=nice --all
  s = status -sb
  st = status -sb
  ri = rebase -i
  rc = rebase --continue
  ra = rebase --abort
  serve = daemon --verbose --export-all --base-path=.git --reuseaddr --strict-paths .git/

[difftool "sourcetree"]
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  path = 

[mergetool "sourcetree"]
  cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
  trustExitCode = true
[pull]
  ff = only
